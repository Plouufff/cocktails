{% extends 'base.html.twig' %}

{% set hue = random(36) * 10 %}

{% block body %}
    <header>
        {% block header %}
            {% block nav %}
                <nav class="navbar navbar-light bg-light border-bottom">
                    <div class="container d-flex justify-content-between">
                        <div class="d-flex align-items-center">
                            <a href="{{ path('homepage') }}" class="navbar-brand d-flex align-items-center">
                                <strong>Cocktails !</strong>
                            </a>
                            {{ render_esi(path('cocktail_nav_badge', {hue: hue})) }}
                        </div>
                        <a href="{{ path('random_cocktail') }}" class="btn btn-hue-{{ hue }} my-2">
                            Un cocktail au hasard !
                        </a>
                    </div>
                </nav>
            {% endblock %}
        {% endblock %}
    </header>
    <main role="main">
        {% block content %}{% endblock %}
    </main>
{% endblock %}

{% block footer %}
    <footer class="bg-light border-top">
        <div class="container d-flex justify-content-between">
            <p>
                Fait avec <i class="bi bi-cup-straw"></i> par&nbsp;
                <a class="text-dark" href="https://github.com/plouufff" target="_blank" rel="noopener noreferrer">
                    Plouufff <i class="bi bi-github"></i>
                </a>
            </p>
            <p>
                <a href="#" class="text-dark d-none d-sm-block">Retour en haut de page</a>
                <a href="#" class="text-dark d-block d-sm-none"><i class="bi bi-arrow-up"></i></a>
            </p>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
